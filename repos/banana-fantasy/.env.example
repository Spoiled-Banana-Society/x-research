# Environment (dev or prod)
NEXT_PUBLIC_ENVIRONMENT=prod

# Force the UI to use mock data instead of calling Next.js app/api routes.
# Useful for development/offline mode.
USE_MOCK_DATA=false

# ============================================================================
# API URLs (required for lib/api service layer)
# ============================================================================

# Drafts API - main backend
# Production: https://sbs-drafts-api-w5wydprnbq-uc.a.run.app
# Test: https://sbs-drafts-api-ajuy5qy3wa-uc.a.run.app
NEXT_PUBLIC_DRAFTS_API_URL=https://sbs-drafts-api-w5wydprnbq-uc.a.run.app

# WebSocket server for real-time draft events
# Production: wss://sbs-drafts-server-w5wydprnbq-uc.a.run.app
# Test: wss://sbs-drafts-server-1026708014901.us-central1.run.app
NEXT_PUBLIC_DRAFT_SERVER_URL=wss://sbs-drafts-server-w5wydprnbq-uc.a.run.app

# ============================================================================
# Firebase Configuration (required for real-time features via lib/api/firebase.ts)
# ============================================================================

# Firebase API Key
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain
NEXT_PUBLIC_AUTH_DOMAIN=your_firebase_auth_domain_here

# Firebase Realtime Database URL (SBS uses this for player counts, etc)
# Production: https://sbs-prod-env-default-rtdb.firebaseio.com
NEXT_PUBLIC_DATABASE_URL=https://sbs-prod-env-default-rtdb.firebaseio.com

# Firebase Project ID
# Production: sbs-prod-env
NEXT_PUBLIC_PROJECT_ID=sbs-prod-env

# Firebase Storage Bucket
NEXT_PUBLIC_STORAGE_BUCKET=your_storage_bucket_here

# Firebase Messaging Sender ID
NEXT_PUBLIC_MESSAGING_SENDER_ID=your_messaging_sender_id_here

# Firebase App ID
NEXT_PUBLIC_APP_ID=your_app_id_here

# Firebase Measurement ID (for analytics, optional)
NEXT_PUBLIC_MEASUREMENT_ID=your_measurement_id_here

# Google Analytics (gtag.js) measurement ID (optional, e.g. G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# ============================================================================
# Future: Web3Auth, OpenSea, ThirdWeb (not yet integrated)
# ============================================================================

# Web3Auth (for wallet authentication) - future integration
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here
NEXT_PUBLIC_INFURA_KEY=your_infura_key_here

# OpenSea API (for NFT profile pictures) - future integration
NEXT_PUBLIC_OPENSEA_API_KEY=your_opensea_api_key_here

# ThirdWeb (for minting draft passes) - future integration
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# ============================================================================
# INSTRUCTIONS
# ============================================================================
# 1. Copy this file to .env.local
# 2. Fill in the actual values from Dev or the old sbs-draft-web-main project
# 3. For test environment, update API URLs (see comments above)
# 4. Firebase credentials should come from the Google Cloud project (sbs-prod-env)
# 5. Do NOT commit .env.local to git (it's in .gitignore)

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
